<!-- START OF TEMPLATES -->
{{#*inline "AttributeViewer"}}
  {{#if (and (not mandatory) value)}}
  <div class="item-group-attribute-value display-only" data-tippy-content="{{localize loc}}">
    <i class="icon-{{icon}} themed-icon"></i>
    <span class="sep"></span>
    <span class="text">{{ifThen immune '-' (plusify value)}}</span>
  </div>
  {{/if}}
{{/inline}}

{{#* inline "DropZoneView"}}
  <div class="drop-zone-view" data-group="{{dataGroup}}" data-level="{{dataLevel}}">
    {{#each collection as |item index|}}
      <div class="nested-item" data-item-index="{{index}}" data-item-id="{{item._id}}" {{#if item.system.enrichedDescriptionUnrolled}}data-tippy-html="{{item.system.enrichedDescriptionUnrolled}}"{{/if}}>
        <img src="{{item.img}}">
        <span class="edit-nested-item dl-clickable" data-action="editNestedItem">{{item.name}}</span>
        {{#if ../selectable}}
          <div style="margin-right: 1px;margin-left: auto; align-self: center"
               data-action="transferItem"
               class="dl-custom-checkbox dl-item-transfer {{#if item.selected}}checked{{/if}}"
               data-tippy-content="{{localize "DL.TransferItem"}}"></div>
        {{/if}}
      </div>
    {{/each}}
  </div>
{{/inline}}
<!-- END OF TEMPLATES -->

<div class="dl-item-section-header">
  <b>{{item.name}}</b>
</div>
<hr>

<!-- STARTING ATTRIBUTES  -->
<div class="dl-item-section">
  <b>{{localize "DL.Attributes"}}</b>
  <div class="role-attributes-container">
    {{> AttributeViewer icon='strength' value=system.attributes.strength immune=system.attributes.strengthImmune loc='DL.AttributeStrength'}}
    {{> AttributeViewer icon='agility' value=system.attributes.agility immune=system.attributes.agilityImmune loc='DL.AttributeAgility'}}
    {{> AttributeViewer icon='intellect' value=system.attributes.intellect immune=system.attributes.intellectImmune loc='DL.AttributeIntellect'}}
    {{> AttributeViewer icon='will' value=system.attributes.will immune=system.attributes.willImmune loc='DL.AttributeWill'}}
  </div>
</div>

<hr>

<!-- CHARACTERISTICS MODIFIER  -->
<div class="dl-item-section">
    <b>{{localize "DL.WeaponModifiers"}}</b>
  <div class="characteristics-container">
    {{> AttributeViewer icon='health' value=system.characteristics.healthmodifier loc='DL.CharHealth'}}
    {{> AttributeViewer icon='healing' value=system.characteristics.healingratemodifier loc='DL.CharHealthHealingRating'}}
    {{> AttributeViewer icon='size' value=system.characteristics.size loc='DL.CharSize'}}
    {{> AttributeViewer icon='defense' value=system.characteristics.defensemodifier loc='DL.AttributeDefense'}}
    {{> AttributeViewer icon='perception' value=system.characteristics.perceptionmodifier loc='DL.AttributePerception'}}
    {{> AttributeViewer icon='speed' value=system.characteristics.speed loc='DL.CharSpeed'}}
    {{> AttributeViewer icon='insanity' value=system.characteristics.insanity loc='DL.CharInsanity'}}
    {{> AttributeViewer icon='corruption' value=system.characteristics.corruption loc='DL.CharCorruption'}}
    {{> AttributeViewer icon='power' value=system.characteristics.power loc='DL.CharPower'}}
    {{> AttributeViewer icon='difficulty' value=system.difficulty loc='DL.CreatureDifficulty'}}
    {{> AttributeViewer icon='frightening' value=system.frightening loc='DL.CreatureFrightening'}}
    {{> AttributeViewer icon='horrifying' value=system.horrifying loc='DL.CreatureHorrifying'}}
  </div>
</div>

<hr>

<div class="drop-zones-container">
  <div class="dl-item-section">
    <div class="dl-item-section-title">
      <b>{{localize "DL.TalentTitle"}}</b>
      <a class="create-nested-item" data-action="createNestedItem" data-tippy-content="{{localize 'DL.TalentAdd'}}"
          data-type="talent" data-group="talents" data-folder-loc="TalentTitle" data-level="0">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    {{> DropZoneView collection=system.talents dataGroup="talents" dataLevel=0}}
  </div>

  <div class="dl-item-section">
    <div class="dl-item-section-title">
      <b>{{localize "DL.WeaponTitle"}}</b>
      <a class="create-nested-item" data-action="createNestedItem" data-tippy-content="{{localize 'DL.WeaponAdd'}}"
        data-type="weapon" data-group="weapons" data-folder-loc="WeaponTitle" data-level="0">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    {{> DropZoneView collection=system.weapons dataGroup="weapons" dataLevel=0}}
  </div>

  <div class="dl-item-section">
    <div class="dl-item-section-title">
      <b>{{localize "DL.MagicSpellsTitle"}}</b>
      <a class="create-nested-item" data-action="createNestedItem" data-tippy-content="{{localize 'DL.SpellAdd'}}"
        data-type="spell" data-group="spells" data-folder-loc="MagicSpellsTitle" data-level="0">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    {{> DropZoneView collection=system.spells dataGroup="spells" dataLevel=0}}
  </div>

  <div class="dl-item-section">
    <div class="dl-item-section-title">
      <b>{{localize "DL.CreatureSpecialEndRound"}}</b>
      <a class="create-nested-item" data-action="createNestedItem" data-tippy-content="{{localize 'DL.CreatureAddEndRound'}}"
        data-type="endoftheround" data-group="endOfRound" data-folder-loc="CreatureSpecialEndRound" data-level="0">
        <i class="fas fa-plus"></i>
      </a>
    </div>
    {{> DropZoneView collection=system.endOfRound dataGroup="endOfRound" dataLevel=0}}
  </div>
</div>